{
  // Enable golangci-lint with config in the repository.
  "go.lintTool": "golangci-lint",
  "go.lintFlags": [
    "--fast"
  ],
  // Enable go vulnerability checks.
  "go.diagnostic.vulncheck": "Imports",
  "go.testTimeout": "60s",
  // Load env for secrets required for integration tests.
  "go.testEnvFile": "${workspaceFolder}/.env",
}
